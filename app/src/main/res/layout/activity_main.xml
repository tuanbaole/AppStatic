<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="develop.admin.it.formular.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutMain"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageButton
            android:id="@+id/imageButtonSms"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/sms" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công việc"
            android:textStyle="bold"
            android:layout_below="@+id/imageButtonSms"
            android:layout_alignRight="@+id/imageButtonSms"
            android:layout_alignEnd="@+id/imageButtonSms"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SXMB"
            android:textStyle="bold"
            android:layout_below="@+id/imageButtonKetQuaSoXo"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButtonKetQuaSoXo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/imageButtonSms"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/kqsx" />

        <ImageButton
            android:id="@+id/imageButtonContact"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageButtonKetQuaSoXo"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/contact" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButtonContact"
            android:layout_alignRight="@+id/imageButtonContact"
            android:layout_below="@+id/imageButtonContact"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="Danh Bạ"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonBoSo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imageButtonContact"
            android:layout_alignStart="@+id/imageButtonContact"
            android:layout_below="@+id/textView"
            android:layout_marginTop="13dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/dowload_ki_tu" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bộ Số"
            android:textStyle="bold"
            android:layout_below="@+id/imageButtonBoSo"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <ImageButton
            android:id="@+id/imageButtonManger"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/money"
            android:layout_alignTop="@+id/imageButtonBoSo"
            android:layout_alignLeft="@+id/imageButtonSms"
            android:layout_alignStart="@+id/imageButtonSms" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Công Nợ"
            android:textStyle="bold"
            android:layout_below="@+id/imageButtonManger"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <ImageButton
            android:id="@+id/imageStatistic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/statistic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageStatistic"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Thống Kê"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButtonSetting"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/setting"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/imageButtonManger"
            android:layout_alignStart="@+id/imageButtonManger" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cài Đặt"
            android:textStyle="bold"
            android:layout_below="@+id/imageButtonSetting"
            android:layout_alignLeft="@+id/imageButtonSetting"
            android:layout_alignStart="@+id/imageButtonSetting"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />

        <ImageButton
            android:id="@+id/imageButtonCheckSms"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/imageStatistic"
            android:layout_alignStart="@+id/imageStatistic"
            android:layout_below="@+id/textView6"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/load_sms" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Kiểm tin"
            android:textStyle="bold"
            android:layout_below="@+id/imageButtonCheckSms"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation" />

</android.support.v4.widget.DrawerLayout>
